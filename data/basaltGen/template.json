{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "BasaltGen",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "\\w+:\\w+",
            "validityNotice": "Must be in the format modid:id (example: minecraft:cobblestone)"
        },
        "weight": {
            "type": "number",
            "default": 100
        },
        "minY": { "type": "integer" },
        "maxY": { "type": "integer" },
        "dimensions": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "\\w+:\\w+",
                "validityNotice": "Must be in the format modid:id (example: minecraft:cobblestone)"
            }
        },
        "excludedDimensions": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "\\w+:\\w+",
                "validityNotice": "Must be in the format modid:id (example: minecraft:cobblestone)"
            }
        },
        "neighbours": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "\\w+:\\w+",
                "validityNotice": "Must be in the format modid:id (example: minecraft:cobblestone)"
            }
        },
        "excludedBiomes": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "\\w+:\\w+",
                "validityNotice": "Must be in the format modid:id (example: minecraft:cobblestone)"
            }
        },
        "biomes": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "\\w+:\\w+",
                "validityNotice": "Must be in the format modid:id (example: minecraft:cobblestone)"
            }
        },
        "modifier": {
            "type": "string",
            "pattern": "\\w+:\\w+",
            "validityNotice": "Must be in the format modid:id (example: minecraft:cobblestone)"
        }
    },
    "required": ["id", "weight"]
}